<?xml version="1.0"?>
<!-- With the reactive feedback you can run a continuously check the previous nodes while the DUmmy action is RUNNING -->
<root main_tree_to_execute ="Main_Tree">
	<BehaviorTree ID="Main_Tree">
		<Sequence>
		 	<SetBlackboard output_key="counter" value="0"/>
			<Action ID="PrintMsg" message="Starting tree"/>
			<Fallback>
				<Sequence>
					<ReactiveFallback>
						<Inverter>
							<Sequence>
								<Action ID="AddTwo" service_name = "tutorials_btros/add_two"	first = "{counter}" second= "1"	sum = "{counter}" />
								<Action ID="PrintValue" message="{counter}"/>
							</Sequence>
						</Inverter>
						<Action ID="Dummy" server_name="/tutorials_btros/dummy" total_time="50"  period="1" />
					</ReactiveFallback>
	      <Action ID="PrintMsg" message="Counter result is"/>
				<Action ID="PrintValue" value="{counter}"/>
			</Sequence>
			<Action ID="PrintMsg" message="You made a mistake"/>
		</Fallback>
		</Sequence>
	</BehaviorTree>
</root>
